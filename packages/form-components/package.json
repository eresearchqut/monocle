{
  "name": "@trrf/form-components",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "directory": "packages/form-components",
    "url": "https://github.com/eresearchqut/future-state-mono-repo/tree/main/packages/form-components"
  },
  "scripts": {
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "copy-files": "copyfiles -u 1 src/**/*.scss dist/ && copyfiles -u 1 src/**/*.svg dist/ && copyfiles package.json dist/",
    "prepack": "yarn build",
    "build": "yarn clean && tsc --build && yarn copy-files",
    "test": "jest --no-cache",
    "test-cov": "jest --no-cache --coverage",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --fix --max-warnings=0",
    "storybook": "(start-storybook -p 6006)",
    "build-storybook": "rimraf storybook-static && build-storybook -o ../../storybooks/form-components",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "dependencies": {
    "@jsonforms/core": "^3.0.0-alpha.0",
    "@jsonforms/react": "^3.0.0-alpha.0",
    "@svg-maps/cli": "1.0.0-beta.5",
    "lodash": "4.17.21",
    "primeflex": "2.0.0",
    "primeicons": "4.1.0",
    "primereact": "6.6.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-img-mapper": "1.2.2",
    "react-transition-group": "^4.4.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@storybook/addon-actions": "^6.3.10",
    "@storybook/addon-essentials": "^6.3.10",
    "@storybook/addon-links": "^6.3.10",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.3.10",
    "@storybook/storybook-deployer": "^2.8.10",
    "@svg-maps/cli": "^1.0.0-beta.5",
    "@types/enzyme": "^3.10.3",
    "@types/lodash": "4.14.171",
    "@types/react": "17.0.16",
    "@types/react-dom": "17.0.9",
    "@types/uuid": "^8.3.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "babel-loader": "^8.2.2",
    "copyfiles": "2.4.1",
    "enzyme": "^3.10.0",
    "jsdom": "^16.6.0",
    "jsdom-global": "^3.0.2",
    "prettier": "^2.3.2",
    "react-redux": "^7.2.4",
    "sass-loader": "^10.2.0",
    "typescript-plugin-css-modules": "3.4.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.tsx"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
