{
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        {
            "path": "../form-definition"
        }
    ]
}