{
    "name": "@trrf/form-definition",
    "version": "1.0.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "license": "MIT",
    "repository": {
        "type": "git",
        "directory": "packages/core",
        "url": "https://github.com/ahoopen/typescript-mono-repo.git"
    },
    "scripts": {
        "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
        "prepack": "yarn build",
        "schemas": "ts-json-schema-generator --path 'src/**/forms.ts'",
        "build": "yarn clean && tsc --build && cp \"./package.json\" ./dist/",
        "test": "echo 'notest'",
        "lint": "eslint \"./src/**/*.{ts,tsx}\" --max-warnings=0"
    },
    "devDependencies": {
        "ts-json-schema-generator": "^0.94.1"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "**/test/**/*.test.ts",
            "**/test/**/*.test.tsx"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/dist/"
        ]
    }
}
