{
  "name": "@trrf/form-designer",
  "version": "1.0.0",
  "main": "index.js",
  "types": "index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "directory": "packages/form-designer",
    "url": "https://github.com/eresearchqut/future-state-mono-repo.git"
  },
  "scripts": {
    "clean": "rimraf build && rimraf tsconfig.tsbuildinfo",
    "prepack": "yarn build",
    "build": "yarn clean && yarn react-app-rewired:build",
    "start": "yarn react-app-rewired:start",
    "react-app-rewired:start": "cross-env SKIP_PREFLIGHT_CHECK=true DISABLE_ESLINT_PLUGIN=true react-app-rewired start",
    "react-app-rewired:build": "cross-env SKIP_PREFLIGHT_CHECK=true DISABLE_ESLINT_PLUGIN=true react-app-rewired build",
    "test": "echo 'notests'",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --max-warnings=0",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "rimraf storybook-static && build-storybook",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "dependencies": {
    "@trrf/form-compiler": "1.0.0",
    "@trrf/form-components": "1.0.0",
    "@trrf/form-definition": "1.0.0",
    "react-beautiful-dnd": "13.1.0",
    "react-json-editor-ajrm": "2.5.13",
    "sass": "^1.37.5"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.3.6",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-links": "^6.3.6",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.3.6",
    "@storybook/storybook-deployer": "^2.8.10",
    "storybook-react-context": "^0.4.0",
    "@types/react-json-editor-ajrm": "2.5.2",
    "@types/react-beautiful-dnd": "^13.1.0",
    "cross-env": "7.0.3",
    "customize-cra": "1.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "fork-ts-checker-webpack-plugin": "6.2.12",
    "jsdom": "^16.6.0",
    "jsdom-global": "^3.0.2",
    "less-loader": "6.2.0",
    "react-app-rewired": "2.1.8",
    "react-redux": "^7.1.3",
    "react-scripts": "4.0.3",
    "tsconfig-paths-webpack-plugin": "3.5.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.tsx"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
