{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "BooleanInput": {
            "properties": {
                "name": {
                    "description": "The name of the element",
                    "type": "string"
                },
                "required": {
                    "description": "Can the element be flagged as required",
                    "type": "boolean"
                },
                "type": {
                    "enum": [
                        "boolean"
                    ],
                    "type": "string"
                }
            },
            "title": "Boolean",
            "type": "object"
        },
        "CurrencyInput": {
            "properties": {
                "currencyCode": {
                    "type": "string"
                },
                "currencyDisplay": {
                    "enum": [
                        "name",
                        "symbol"
                    ],
                    "type": "string"
                },
                "maximum": {
                    "type": "number"
                },
                "minimum": {
                    "type": "number"
                },
                "name": {
                    "description": "The name of the element",
                    "type": "string"
                },
                "required": {
                    "description": "Can the element be flagged as required",
                    "type": "boolean"
                },
                "type": {
                    "enum": [
                        "currency"
                    ],
                    "type": "string"
                }
            },
            "title": "Currency",
            "type": "object"
        },
        "DateInput": {
            "properties": {
                "maximum": {
                    "format": "date",
                    "type": "string"
                },
                "minimum": {
                    "format": "date",
                    "type": "string"
                },
                "name": {
                    "description": "The name of the element",
                    "type": "string"
                },
                "required": {
                    "description": "Can the element be flagged as required",
                    "type": "boolean"
                },
                "type": {
                    "enum": [
                        "date"
                    ],
                    "type": "string"
                }
            },
            "title": "Date",
            "type": "object"
        },
        "ImageArea": {
            "properties": {
                "coords": {
                    "description": "Coordinates delimiting the zone according to the specified shape:\nrect: top-left-X,top-left-Y,bottom-right-X,bottom-right-Y\ncircle: center-X,center-Y,radius\npoly: Every point in the polygon path as point-X,point-Y,...",
                    "items": {
                        "type": "number"
                    },
                    "type": "array"
                },
                "disabled": {
                    "description": "Enable/Disable area listeners and highlighting",
                    "type": "boolean"
                },
                "fillColor": {
                    "$ref": "#/definitions/Rgba",
                    "description": "Fill color of the highlighted zone"
                },
                "href": {
                    "description": "Target link for a click in the zone (note that if you provide an onClick prop, href will be prevented)",
                    "type": "string"
                },
                "id": {
                    "description": "Uniquely identify an area.",
                    "type": "string"
                },
                "preFillColor": {
                    "$ref": "#/definitions/Rgba",
                    "description": "Pre filled color of the highlighted zone"
                },
                "shape": {
                    "description": "Either rect, circle or poly",
                    "enum": [
                        "circle",
                        "poly",
                        "rect"
                    ],
                    "type": "string"
                },
                "strokeColor": {
                    "description": "Border color of the highlighted zone",
                    "type": "number"
                }
            },
            "title": "Image Area",
            "type": "object"
        },
        "ImageMapInput": {
            "properties": {
                "areas": {
                    "items": {
                        "$ref": "#/definitions/ImageArea"
                    },
                    "type": "array"
                },
                "image": {
                    "format": "uri",
                    "type": "string"
                },
                "name": {
                    "description": "The name of the element",
                    "type": "string"
                },
                "required": {
                    "description": "Can the element be flagged as required",
                    "type": "boolean"
                },
                "type": {
                    "enum": [
                        "image-map"
                    ],
                    "type": "string"
                }
            },
            "title": "Image Map",
            "type": "object"
        },
        "NumericInput": {
            "properties": {
                "decimalPlaces": {
                    "minimum": 0,
                    "type": "integer"
                },
                "groupNumbers": {
                    "description": "Whether to use grouping separators, such as thousands separators",
                    "type": "boolean"
                },
                "increment": {
                    "type": "number"
                },
                "maximum": {
                    "type": "number"
                },
                "minimum": {
                    "type": "number"
                },
                "name": {
                    "description": "The name of the element",
                    "type": "string"
                },
                "required": {
                    "description": "Can the element be flagged as required",
                    "type": "boolean"
                },
                "type": {
                    "enum": [
                        "numeric"
                    ],
                    "type": "string"
                }
            },
            "title": "Numeric",
            "type": "object"
        },
        "Rgba": {
            "properties": {
                "blue": {
                    "default": 0,
                    "maximum": 255,
                    "minimum": 0,
                    "type": "integer"
                },
                "green": {
                    "default": 0,
                    "maximum": 255,
                    "minimum": 0,
                    "type": "integer"
                },
                "opacity": {
                    "default": 1,
                    "maximum": 1,
                    "minimum": 0,
                    "type": "number"
                },
                "red": {
                    "default": 0,
                    "maximum": 255,
                    "minimum": 0,
                    "type": "integer"
                }
            },
            "type": "object"
        },
        "Section": {
            "properties": {
                "inputs": {
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/definitions/BooleanInput"
                            },
                            {
                                "$ref": "#/definitions/TextInput"
                            },
                            {
                                "$ref": "#/definitions/DateInput"
                            },
                            {
                                "$ref": "#/definitions/NumericInput"
                            },
                            {
                                "$ref": "#/definitions/CurrencyInput"
                            },
                            {
                                "$ref": "#/definitions/ImageMapInput"
                            }
                        ],
                        "title": "Input"
                    },
                    "type": "array"
                },
                "name": {
                    "description": "The name of the element",
                    "type": "string"
                }
            },
            "title": "Section",
            "type": "object"
        },
        "TextInput": {
            "properties": {
                "maxLength": {
                    "type": "number"
                },
                "minLength": {
                    "type": "number"
                },
                "multiline": {
                    "type": "boolean"
                },
                "name": {
                    "description": "The name of the element",
                    "type": "string"
                },
                "required": {
                    "description": "Can the element be flagged as required",
                    "type": "boolean"
                },
                "type": {
                    "enum": [
                        "text"
                    ],
                    "type": "string"
                }
            },
            "title": "Text",
            "type": "object"
        }
    },
    "properties": {
        "name": {
            "description": "The name of the element",
            "type": "string"
        },
        "sections": {
            "items": {
                "$ref": "#/definitions/Section"
            },
            "type": "array"
        }
    },
    "title": "Form",
    "type": "object"
}

